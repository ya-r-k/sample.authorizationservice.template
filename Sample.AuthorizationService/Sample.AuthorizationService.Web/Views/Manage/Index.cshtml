@model ProfileViewModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "_ManageLayout";
}

<div class="ms-Card">
    <div class="ms-Card-header">
        <h2 class="ms-FontSize-24 ms-FontWeight-semibold">@ViewData["Title"]</h2>
    </div>
    <div class="ms-Card-content">
        <form method="post" asp-action="UpdateProfile">
            <div asp-validation-summary="ModelOnly" class="ms-MessageBar ms-MessageBar--error"></div>

            <div class="ms-Grid-row">
                <div class="ms-Grid-col ms-sm6">
                    <div class="ms-TextField">
                        <label asp-for="GivenName" class="ms-Label"></label>
                        <input asp-for="GivenName" class="ms-TextField-field" />
                        <span asp-validation-for="GivenName" class="ms-TextField-errorMessage"></span>
                    </div>
                </div>
                <div class="ms-Grid-col ms-sm6">
                    <div class="ms-TextField">
                        <label asp-for="FamilyName" class="ms-Label"></label>
                        <input asp-for="FamilyName" class="ms-TextField-field" />
                        <span asp-validation-for="FamilyName" class="ms-TextField-errorMessage"></span>
                    </div>
                </div>
            </div>

            <div class="ms-Grid-row">
                <div class="ms-Grid-col ms-sm6">
                    <div class="ms-TextField">
                        <label asp-for="MiddleName" class="ms-Label"></label>
                        <input asp-for="MiddleName" class="ms-TextField-field" />
                        <span asp-validation-for="MiddleName" class="ms-TextField-errorMessage"></span>
                    </div>
                </div>
                <div class="ms-Grid-col ms-sm6">
                    <div class="ms-TextField">
                        <label asp-for="Nickname" class="ms-Label"></label>
                        <input asp-for="Nickname" class="ms-TextField-field" />
                        <span asp-validation-for="Nickname" class="ms-TextField-errorMessage"></span>
                    </div>
                </div>
            </div>

            <div class="ms-Grid-row">
                <div class="ms-Grid-col ms-sm6">
                    <div class="ms-TextField">
                        <label asp-for="Gender" class="ms-Label"></label>
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="ms-TextField-field ms-Dropdown"></select>
                        <span asp-validation-for="Gender" class="ms-TextField-errorMessage"></span>
                    </div>
                </div>
                <div class="ms-Grid-col ms-sm6">
                    <div class="ms-TextField">
                        <label asp-for="BirthDate" class="ms-Label"></label>
                        <input asp-for="BirthDate" type="date" class="ms-TextField-field" />
                        <span asp-validation-for="BirthDate" class="ms-TextField-errorMessage"></span>
                    </div>
                </div>
            </div>

            <div class="ms-TextField">
                <label asp-for="Email" class="ms-Label"></label>
                <div class="ms-TextField-wrapper">
                    <input asp-for="Email" class="ms-TextField-field" disabled />
                    @if (Model.IsEmailConfirmed)
                    {
                        <i class="ms-Icon ms-Icon--Completed ms-TextField-icon" aria-hidden="true"></i>
                    }
                    else
                    {
                        <i class="ms-Icon ms-Icon--Warning ms-TextField-icon" aria-hidden="true"></i>
                    }
                </div>
            </div>

            <div class="ms-TextField">
                <label asp-for="PhoneNumber" class="ms-Label"></label>
                <input asp-for="PhoneNumber" class="ms-TextField-field" />
                <span asp-validation-for="PhoneNumber" class="ms-TextField-errorMessage"></span>
            </div>

            <button type="submit" class="ms-Button ms-Button--primary">
                <span class="ms-Button-label">Сохранить изменения</span>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
