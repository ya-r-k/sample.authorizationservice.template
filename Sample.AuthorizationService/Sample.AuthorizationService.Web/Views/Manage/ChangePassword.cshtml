@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Изменение пароля";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "_ManageLayout";
}

<div class="ms-Card">
    <div class="ms-Card-header">
        <h2 class="ms-FontSize-24 ms-FontWeight-semibold">@ViewData["Title"]</h2>
    </div>
    <div class="ms-Card-content">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="ms-MessageBar ms-MessageBar--error"></div>

            <div class="ms-TextField">
                <label asp-for="OldPassword" class="ms-Label"></label>
                <input asp-for="OldPassword" class="ms-TextField-field" />
                <span asp-validation-for="OldPassword" class="ms-TextField-errorMessage"></span>
            </div>

            <div class="ms-TextField">
                <label asp-for="NewPassword" class="ms-Label"></label>
                <input asp-for="NewPassword" class="ms-TextField-field" />
                <span asp-validation-for="NewPassword" class="ms-TextField-errorMessage"></span>
            </div>

            <div class="ms-TextField">
                <label asp-for="ConfirmPassword" class="ms-Label"></label>
                <input asp-for="ConfirmPassword" class="ms-TextField-field" />
                <span asp-validation-for="ConfirmPassword" class="ms-TextField-errorMessage"></span>
            </div>

            <button type="submit" class="ms-Button ms-Button--primary">
                <span class="ms-Button-label">Изменить пароль</span>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
